<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_clean"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@mipmap/ic_launcher_clean_foreground" />

        <TextView
            android:id="@+id/text_view_input"
            android:layout_width="580dp"
            android:layout_height="80dp"

            android:hint="@string/zero"
            android:paddingLeft="10dp"
            android:textColor="#FBFBFB"
            android:textColorHint="#DFDBDB"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/button_remove_last1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            app:srcCompat="@mipmap/ic_launcher_delete_foreground" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:background="@drawable/text_input"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/seven"
            android:textColor="#FBFBFB"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/eight"
            android:textColor="#FBFAFA"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/nine"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_calc"
            android:text="@string/divid"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_four"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/four"
            android:textColor="#FAF8F8"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/five"
            android:textColor="#FDFDFD"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/six"
            android:textColor="#FDFCFC"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_calc"
            android:text="@string/multi"
            android:textColor="#FDFDFB"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/one"
            android:textColor="#F6F6F6"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/two"
            android:textColor="#F6F5F5"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/three"
            android:textColor="#FBFAFA"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_subtraction"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_calc"
            android:text="@string/sub"

            android:textColor="#FBFBFB"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dot"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/dot"
            android:textColor="#FDFDFD"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_buttons"
            android:text="@string/zero"
            android:textColor="#F6F6F6"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_calc"
            android:text="@string/rqul"
            android:textColor="#FDFDFD"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button_summation"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_calc"
            android:text="@string/sum"
            android:textColor="#FDFDFB"
            android:textSize="28sp" />
    </LinearLayout>
</LinearLayout>